<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_number_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_12</item>
    </style>

    <style name="button_submit_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/button_submit_style</item>
        <item name="android:textColor">@color/color_12</item>
    </style>

    <style name="button_menu_style">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="button_menu_landscape_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recycler_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/color_12_light</item>
    </style>

</resources>